<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
       <property name="connection.drive_class">com.mysql.jdbc.Driver</property>
       <property name="connection.url">jdbc:mysql://localhost/hibernate_mapping</property>
       <property name="conection.username">root</property>
      <property name="connection.password">123456<property />
       <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        
        <mapping resource="Country.hbm.xml"/>
    </session-factory>

</hibernate-configuration>


 